{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "generated"
    ],
    "paths": {
      "@elizaos/core": ["../../core/src"],
      "@elizaos/core/*": ["../../core/src/*"]
    }
  },
  "include": ["src/**/*.ts", "generated/**/*.ts", "generated/**/*.json"],
}
